<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.onetrack.android.widgets.SlidingTabLayout
        android:id="@+id/user_home_sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/user_home_view_pager" android:layout_height="match_parent"
        android:layout_width="match_parent" android:layout_below="@id/user_home_sliding_tab_layout"/>

    <com.onetrack.android.widgets.FloatingActionButton
        android:id="@+id/fab_1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:elevation="8dp"
        android:background="@drawable/fab_background"
        android:layout_gravity="center_horizontal">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/user_home_fab_icon"
        android:layout_gravity="center"
        android:duplicateParentState="true"/>
    </com.onetrack.android.widgets.FloatingActionButton>
</RelativeLayout>
